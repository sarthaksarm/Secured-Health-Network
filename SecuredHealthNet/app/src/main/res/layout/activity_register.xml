<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nestedScrollView"
    android:background="@color/Black"
    android:padding="20dp"
    tools:context=".Register">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutName"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:textColorHint="#000"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>

<!--        <com.google.android.material.textfield.TextInputLayout-->
<!--            android:id="@+id/textInputLayoutEmail"-->
<!--            android:layout_width="match_parent"-->
<!--            android:background="#fff"-->
<!--            android:layout_height="wrap_content" >-->

<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/textInputEditTextEmail"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint="Profession"-->
<!--                android:textColorHint="#000"-->
<!--                android:inputType="text"-->
<!--                android:maxLines="1"-->
<!--                android:textColor="#000" />-->
<!--        </com.google.android.material.textfield.TextInputLayout>-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age "
                android:textColorHint="#000"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutarea"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="wrap_content" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditTextArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Location/Area "
                android:textColorHint="#000"
                android:maxLines="1"
                android:textColor="#000" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textviewprof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Profession :"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            />

        <RadioGroup
            android:id="@+id/radiogrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textviewprof">

            <RadioButton
                android:id="@+id/rbbtnhome1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Patient"
                android:textColor="#fff"
                android:textSize="24dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rbbtnhome2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rbbtnhome1"
                android:layout_marginTop="20dp"
                android:text="Doctor "
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="24dp" />

            <RadioButton
                android:id="@+id/rbbtnhome3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rbbtnhome2"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginTop="20dp"
                android:textSize="22dp"
                android:text="Staff Member " />


        </RadioGroup>

        <info.hoang8f.widget.FButton
            android:id="@+id/appCompatButtonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="serif"
            android:layout_marginBottom="50dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:background="@color/colorTextHint"
            android:text="@string/text_register" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>